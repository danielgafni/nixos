{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "reviewers": ["danielgafni"],
  "packageRules": [
    {
      "matchManagers": ["nix"],
      "matchDepNames": ["zed"],
      "addLabels": ["zed"],
      "schedule": ["before 11am"],
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
      "enabled": true,
      "schedule": ["weekly"]
  },
  "nix": {
    "enabled": true
  }
}
